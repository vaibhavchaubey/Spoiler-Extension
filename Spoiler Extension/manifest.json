
{
  "manifest_version": 3,
  "name": "Spoiler Removal Extension",
  "version": "1.0",
  "description": "Remove spoilers from web pages.",
  "permissions": ["activeTab"],
  "action": {
    "default_title": "Remove Spoilers",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
